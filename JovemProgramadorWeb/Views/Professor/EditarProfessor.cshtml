@model Professor

<form asp-controller="Professor" asp-action="ProfessorEditado">

    <input type="hidden" asp-for="id" />

    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="nome" class="form-control col-md-4">
    </div>
    <div class="mb-3">
        <label for="materia" class="form-label">Matéria</label>
        <input type="text" asp-for="materia" class="form-control col-md-4">
    </div>
    <div class="mb-3">
        <label for="cep" class="form-label">Cep</label>
        <input type="text" asp-for="cep" class="form-control col-md-4">
    </div>
    <div class="mb-3">
        <label for="idade" class="form-label">Idade</label>
        <input type="number" asp-for="idade" class="form-control col-md-4">
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary" type="button"> EDITAR</button>
    </div>
</form>

&nbsp;

<div class="d-grid gap-2 d-md-block">
    <a type="submit" class="btn btn-primary" role="button" asp-controller="Professor" asp-action="Index"> Voltar</a>
</div>
