@model List<Aluno>

@if (ViewData["MsgErro"] != null)
{
    <div class="alert-danger">
        @ViewData["MsgErro"]
    </div>
}

@if (ViewData["MsgCerto"] != null)
{
    <div class="alert-success">
        @ViewData["MsgCerto"]
    </div>
}

@if (ViewData["MsgCsdt"] != null)
{
    <div class="alert-success">
        @ViewData["MsgCsdt"]
    </div>
}
@if (TempData["MsgSucesso"] != null)
{
    <div class="alert-success">
        @ViewData["MsgSucesso"]
    </div>
}

@if (TempData["MsgErro"] != null)
{
    <div class="alert-success">
        @ViewData["MsgErro"]
    </div>
}

<p class="lead">
    Confira abaixo a lista dos Alunos:
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Código do Aluno</th>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">Idade</th>
            <th scope="col">Posição</th>
            <th scope="col">CEP</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Aluno aluno in Model)
            {
                <tr>
                    <td> @aluno.id</td>
                    <td> @aluno.nome</td>
                    <td> @aluno.sobrenome</td>
                    <td> @aluno.idade</td>
                    <td> @aluno.posicao</td>
                    <td> @aluno.cep</td>
                        <td>
                            <div class="d-grid gap-2 d-md-block">
                                <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="BuscarEndereco" asp-route-cep="@aluno.cep">Endereco</a>
                            </div>

                        </td>

                </tr>
            }
        }
    </tbody>
</table>

<div class="d-grid gap-2 d-md-block">
    <a type="button" class="btn btn-success" asp-controller="Aluno" asp-action="Adicionar"> Adicionar Aluno</a> 
</div>

&nbsp;

<button type="button" class="btn btn-danger">Remover Aluno</button>